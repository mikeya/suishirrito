<div class="jobs">
    <div class="col-sm-12">
        <h2 class="text-center">Sushirrito's Hiring!</h2>
        <p class="brown text-center">SushirritoÂ® is challenging conventional Japanese cuisine and revamping the current sushi landscape as we know it! We are seeking innovative and eager people to work within an exciting and ambitious environment. Ultimately, candidates need to be excited about helping grow and expand this revolutionary concept. </p>
    </div>
    <%= form_tag("/job_application", method: "post") do %>
        <div class="yellow container-fluid">
            <div class="col-sm-12">
                <h3 class="brown text-center header">Employment Application Form</h3>
                <p class="text-center header"><b>Select desired employment location:</b></p>
                <div class="text-center">
                    <button type="button" class="btn btn-info sf_btn" data-type="san_francisco">San Francisco</button>
                    <button type="button" class="btn btn-info pa_btn" data-type="palo_alto">Palo Alto</button>
                    <input name="location" id="location" type="hidden"/>
                </div>
                <hr/>

                <p class="text-center header"><b>Select desired position:</b></p>
                <div class="col-sm-10 center-block radios">
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="line_cook" value="line_cook"/><label for="line_cook">Line Cook</label></div>
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="prep_cook" value="prep_cook"/><label for="prep_cook">Prep Cook</label></div>
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="cashier" value="cashier"/><label for="cashier">Cashier</label></div>
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="delivery_driver" value="delivery_driver"/><label for="delivery_driver">Delivery Driver</label></div>
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="manager" value="manager"/><label for="manager">Manager</label></div>
                    <div class="col-sm-4 col-xs-6"><input type="radio" name="position" id="corporate" value="corporate"/><label for="corporate">Corporate</label></div>
                </div>
                <hr/>
                <p class="text-center header"><b>Your Contact Information</b></p>
                <div class="col-sm-10 center-block">
                    <div class="col-sm-6">
                        <div class="form-group"><label for="name">Name*</label><input type="text" id="name" name="name" class="form-control"/></div>
                        <div class="form-group"><label for="address">Address*</label><input type="text" id="address" name="address" class="form-control"/></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group"><label for="email">Email</label><input type="text" id="email" name="email" class="form-control"/></div>
                        <div class="form-group"><label for="phone">Phone*</label><input type="text" id="phone" name="phone" class="form-control"/></div>
                    </div>
                </div>

                <hr/>
                <p class="text-center"><b>Describe your job experience or copy & paste your resume below</b></p>

                <textarea name="experience" id="experience" class="form-control"></textarea>


                <button class="btn btn-default center-block">Submit</button>
            </div>
        </div>
   <% end %>
</div>

<script>
    $(document).ready(function(){
        $('.sf_btn, .pa_btn').on('click',function(){
            $(this).toggleClass('btn-info btn-default');
            if($(this).hasClass('btn-info')){
                $('#location').val('');
            }else if($(this).hasClass('btn-default')){
                $('#location').val($(this).data('type'));
            }
            $('.'+$(this).data('type')).slideToggle();
        });

        $('.sf_btn').on('click',function(){
            $('.pa_btn').removeClass('btn-default').addClass('btn-info');
        });

        $('.pa_btn').on('click',function(){
            $('.sf_btn').removeClass('btn-default').addClass('btn-info');
        });

    });
</script>